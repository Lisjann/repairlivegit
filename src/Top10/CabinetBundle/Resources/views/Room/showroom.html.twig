{% block slides_block %}
	{% if slides | length > 0 %}
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="500000000">
			<!-- Indicators -->
			{% if slides | length > 1 %}
				<ol class="carousel-indicators">
					{% set i = 0 %}
					{% for slide in slides %}
						<li data-target="#carousel-example-generic" data-slide-to="{{ i }}" {% if i == 0 %}class="active"{% endif %}></li>
						{% set i = i + 1 %}
					{% endfor %}
				</ol>
			{% endif %}

			<!-- Wrapper for slides -->
			<div class="carousel-inner">
				{% set i = 0 %}
				{% for slide in slides %}
					<div class="item {% if i == 0 %}active{% endif %}">
					  <img src="{{ slide.image }}" alt="{{slide.description}}"/>
					  {% if slide.description != '' %}
						  <div class="carousel-caption hidden-xs">
							{{slide.description | raw }}
						  </div>
					  {% endif %}
					</div>
				{% set i = i + 1 %}
				{% endfor %}
			</div>
			{% if slides | length > 1 %}
				<!-- Controls -->
				<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
					<span class="glyphicon glyphicon-chevron-left"></span>
				</a>
				<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
					<span class="glyphicon glyphicon-chevron-right"></span>
				</a>
			{% endif %}
		</div>
	{% endif %}
{% endblock slides_block %}

