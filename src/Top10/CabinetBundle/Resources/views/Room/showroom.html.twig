										{% for propertiesforegin in room.propertiesforegin %}
											<li>{{ propertiesforegin.properties.name ~ ': ' }}<strong>{{ propertiesforegin.value }}</strong> {{ propertiesforegin.properties.measure }}</li>
										{% endfor %}
										</ul>
									{% endif %}

									{{ room.characteristics | raw }}
