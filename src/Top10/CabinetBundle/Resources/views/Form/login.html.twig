<div class="row">
	<div class="col-lg-12 left_content">
		<h1 class="breadcrumb">Авторизация</h1>
	</div>
</div>

<div class="row">
	<div class="col-sm-12 col-xs-12 left_content">
		<div class="block-border">
			<div class="col-lg-12">
				{% if error %}
					<div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
				{% endif %}
				<form class="login" action="{{ path("fos_user_security_check") }}" method="post" >
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
					<div class="form-group">
						<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Ваш логин" required="required" />
					</div>
					<div class="form-group">
						<input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" required="required" />
					</div>
					<div class="form-group">
						<div class="checkbox">
							<label>
								<input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
								{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
							</label>
						</div>
					</div>
					<div class="form-group">
						<input type="submit" class="btn btn-danger" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" id="_submit" name="_submit" />
						<a href="{{ path('fos_user_resetting_request') }}">Забыли пароль?</a>
					</div>

					{#<a href="{{ path('fos_user_resetting') }}">Забыли пароль?</a>#}
				</form>
			</div>
		</div>
	</div>
</div>


